<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:animateLayoutChanges="true"
    android:elevation="18dp"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="88dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="141dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/ivProduct"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:fontFamily="@font/akaya_telivigala"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/backsplash"
                    android:textSize="@dimen/version"
                    android:textStyle="bold"
                    tools:text="Titulo" />

                <TextView
                    android:id="@+id/tvProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/margarine"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/prov"
                    android:textStyle="italic"
                    tools:text="Provedor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="109dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:paddingStart="106dp"
                        app:srcCompat="@drawable/price" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/chilanka"
                        android:gravity="center|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/backsplash"
                        android:textSize="@dimen/num"
                        tools:text="Price" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="106dp"
                        app:srcCompat="@drawable/truck" />

                    <TextView
                        android:id="@+id/tvDelivery"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/chilanka"

                        android:paddingLeft="2dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/priceDelivery"
                        android:textSize="@dimen/num"
                        tools:text="Delivery" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>